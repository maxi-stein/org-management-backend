{
  "env": "development",

  "server": {
    "url": "http://localhost:4000",
    "maxResultsLimit": 1000,
    "port": 4000
  },

  "auth": {
    "token": {
      "secret": "secret",
      "issuer": "Org-Management-API",
      "algorithm": "RS256"
    },
    "key": "base-api-local",
    "passwordTtl": 3600
  },

  "rateLimit": {
    "window": "1m",
    "requests": 1000
  },

  "mongo": {
    "db": "base-api",
    "url": "mongodb://localhost/base-api"
  },

  "logger": {
    "sentry": {
      "dsn": ""
    },
    "console": {
      "level": "debug",
      "timestamp": true,
      "handleExceptions": true,
      "humanReadableUnhandledException": true,
      "colorize": true
    }
  },

  "exchange": {
    "interval": "*/29 * * * *",
    "queryMinutes": 29,
    "timezone": "America/Argentina/Buenos_Aires",
    "enable": true
  }
}
